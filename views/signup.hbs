<div class="container mt-5">
        <div class="card mx-auto" style="width: 100%;">
            <div class="card-header text-center">Sign up</div>
            <div class="card-body">
                <form action="#" method="POST">
                    <h4 class="text-center">Choose an account type:</h4>
                    <div class="form-group row">
                        <div class="col-3"></div>
                        <button class="btn btn-block col-3 mb-3 text-center">
                            <img src="images/driver.png" width="80%" height="width">
                            <br>
                            <label class="text-center">Driver</label>
                        </button>
                        <button class="btn btn-block col-3 mb-3 text-center">
                            <img src="images/customer.png" width="80%" height="width">
                            <br>
                            <label class="text-center">Customer</label>
                        </button>
                        <div class="col-3"></div>
                    </div>

                    <div class="form-group row">
                        <label for="name" class="col-lg-4 col-form-label">Name:</label>
                        <input id="name" type="text" name="name" class="form-control col-lg-7">
                    </div>
                    <div class="form-group row">
                        <label for="phone" class="col-lg-4 col-form-label">Phone number:</label>
                        <input id="phone" type="number" name="phone" class="form-control col-lg-7 ">
                    </div>
                    <div class="form-group row">
                        <label for="mail" class="col-lg-4 col-form-label">Email:</label>
                        <input id="mail" type="mail" name="mail" class="form-control col-lg-7">
                    </div>
                    <div class="form-group row">
                        <label for="password" class="col-lg-4 col-form-label">Password:</label>
                        <input id="password" type="password" name="password" class="form-control col-lg-7">
                    </div>
                    <div class="form-group row">
                        <label for="confirm" class="col-lg-4 col-form-label">Confirm password:</label>
                        <input id="confirm" type="password" name="confirm" class="form-control col-lg-7">
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="accept" value="accept">
                        <label class="form-check-label" for="accept">By creating an account, I accept our Term &
                            Privacy</label>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary px-5 mt-3">Sign up</button>
                    </div>


                </form>
                <hr>
                <p class="text-center">Or sign up with:</p>
                <div class="row">
                    <div class="col-lg-3 my-1 text-center">
                        <a href="#" class="fb btn" style="width: 100%;">
                            <i class="fa fa-facebook"></i>
                            Facebook
                        </a>
                    </div>

                    <div class="col-lg-3 my-1 text-center">
                        <a href="#" class="gg btn" style="width: 100%;">
                            <i class="fa fa-google"></i>
                            Google
                        </a>
                    </div>

                    <div class="col-lg-3 my-1 text-center">
                        <a href="#" class="yh btn" style="width: 100%;">
                            <i class="fa fa-yahoo"></i>
                            Yahoo
                        </a>
                    </div>

                    <div class="col-lg-3 my-1 text-center">
                        <a href="#" class="tt btn" style="width: 100%;">
                            <i class="fa fa-twitter"></i>
                            Twitter
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>