<div class="container mt-5">
        <div class="card mx-auto" style="width: 100%;">
            <div class="card-header text-center">Sign up</div>
            <div class="card-body">
                {{#if message}}
                <div class="row">
                        <div class="col-md-12 alert {{kind}} text-center">
                            {{message}}
                        </div>
                </div>
                {{/if}}
                <form action="/user/signup" method="POST" role="form" enctype="multipart/form-data">
                    <h4 class="text-center">Choose an account type:</h4>
                    <div class="form-group row">
                        <div class="col-3 mb-3"></div>
                        <div class="col-3 mb-3 form-check mt-2 text-center">
                            <img src="/images/driver.png" width="80%" height="width">
                            <br>
                            <input class="form-check-input" type="radio" name="accountType" id="driver" value="Driver" required>
                            <label class="form-check-label" for="driver">Driver</label>
                        </div>
                        <div class="col-3 mb-3 form-check mt-2 text-center">
                            <img src="/images/customer.png" width="80%" height="width">
                            <br>
                            <input class="form-check-input" type="radio" name="accountType" id="customer" value="Customer">
                            <label class="form-check-label" for="driver">Customer</label>
                        </div>
                        <div class="col-3 mb-3"></div>
                    </div>

                    <div class="form-group row">
                        <label for="name" class="col-lg-4 col-form-label">Name:</label>
                        <input id="name" type="text" name="name" class="form-control col-lg-7" required>
                    </div>
                    <div class="form-group row">
                        <label for="dob" class="col-lg-4 col-form-label">Date of birth:</label>
                        <input id="dob" type="date" name="dob" class="form-control col-lg-7">
                    </div>
                    <div class="form-group row">
                        <label for="phone" class="col-lg-4 col-form-label">Phone number:</label>
                        <input id="phone" type="number" name="phone" class="form-control col-lg-7" required>
                    </div>
                    <div class="form-group row">
                        <label for="mail" class="col-lg-4 col-form-label">Email:</label>
                        <input id="mail" type="email" name="email" class="form-control col-lg-7" required>
                    </div>
                    <div class="form-group row">
                        <label for="address" class="col-lg-4 col-form-label">Address:</label>
                        <input id="address" type="text" name="address" class="form-control col-lg-7">
                    </div>
                    <div class="form-group row">
                        <label for="avatar" class="col-lg-4 col-form-label">Avatar:</label>
                        <input id="avatar" type="file" name="avatar" accept="image/*" id="avatar" class="form-control-file col-lg-8">
                    </div>
                    <div class="form-group row">
                        <label for="password" class="col-lg-4 col-form-label">Password:</label>
                        <input id="password" type="password" name="password" class="form-control col-lg-7" required>
                    </div>
                    <div class="form-group row">
                        <label for="confirm" class="col-lg-4 col-form-label">Confirm password:</label>
                        <input id="confirm" type="password" name="confirm" class="form-control col-lg-7" required>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="accept" value="accept" required>
                        <label class="form-check-label" for="accept">By creating an account, I accept our Term &
                            Privacy</label>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary px-5 mt-3">Sign up</button>
                    </div>
                </form>
                <hr>
                <p>Already have an account? Please <a href="/user/login">Sign in</a></p>
            </div>
        </div>

    </div>