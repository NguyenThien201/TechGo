<div class="container accordion" id="accordionExample">
        <div class="card mx-auto mx-auto mt-5" style="width:100%; border-radius: 5px;">
            <div class="card-header text-center">
                Trip history
            </div>
            <div class="card-body">
                <p class="card-text">Total trip: {{quantity}}</p>
                <p class="card-text">Total paid: {{total}} vnd</p>
            </div>
            <div class="card-footer text-center bg-white">
                <h6>List of trips</h6>
            </div>
            <ul class="list-group">
                {{#each Trips}}
                <li class="list-group-item" id="trip{{@index}}">
                    <span class="font-weight-bolder">Trip booked ({{bookTime}})</span>
                    <i class="material-icons btn float-right" type="button" data-toggle="collapse" data-target="#lorem{{@index}}"
                        aria-expanded="false" aria-controls="lorem{{@index}}">
                        arrow_drop_down
                    </i>
                </li>
                <div id="lorem{{@index}}" class="collapse" aria-labelledby="trip{{@index}}" data-parent="#accordionExample">
                    <div class="card-body">
                        <p>Vehicle: {{vehicle}}</p>
                        <p>From: {{from}}</p>
                        <p>To: {{to}}</p>
                        <p>Picked up at {{pickTime}}</p>
                        <p>Trip completed at {{dropTime}}</p>
                        <p>Cost: {{cost}} VND</p>
                        <p>Trip status: {{tripStatus}}</p>
                    </div>
                </div>
                {{/each}}
                
            </ul>
            <div class="card-footer">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>