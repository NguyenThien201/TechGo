<div class="container mt-5" style="background-color: #190a70;">
        <div class="card mx-auto" style="width: 100%;">
            <div class="card-header text-center">Bug Report</div>
            <div class="card-body">
                {{#if message}}
                <div class="row">
                        <div class="col-md-12 alert {{kind}} text-center">
                            {{message}}
                        </div>
                </div>
                {{/if}}
                <form action="#" method="POST">
                    
                    <div class="form-group row">
                        <label for="issue" class="col-lg-4">Issue:</label>
                        <select id="issue" name="issue" class="form-control col-lg-7 ml-3">
                            <option value="" required>What is issue?</option>
                            <option value="interface">Interface</option>
                            <option value="booking">Booking</option>
                            <option value="database">Database</option>
                        </select>
                        
                    </div>
                    <div class="form-group row">
                        <label for="content" class="col-lg-4">Problem Description</label>
                        <textarea id="content" name="content" rows="10" class="form-control col-lg-7 ml-3" required></textarea>
                    </div>
                    
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary px-5">Send</button>
                    </div>
                </form>
                
                
            </div>
        </div>

    </div>