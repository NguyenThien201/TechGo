<div class="container mt-5">
        <div class="card mx-auto" style="width: 100%;">
            <div class="card-header text-center">Advanced account management</div>
            <div class="card-body">
                <nav class="nav">
                    <a class="nav-link" href="/admin/account_management">Back</a>
                    <a class="nav-link" href="/admin/{{type}}_account/{{id}}/location">Location</a>
                    <a class="nav-link" href="/admin/{{type}}_account/{{id}}/activities">Booking orders</a>
                    <a class="nav-link" href="/admin/{{type}}_account/{{id}}/rides">Trip activities</a>
                </nav>
                
                {{#if message}}
                <div class="row">
                        <div class="col-md-12 alert {{kind}} text-center">
                            {{message}}
                        </div>
                </div>
                {{/if}}
                
                <div class="card-footer text-center bg-white">
                    <h6>List of trips</h6>
                </div>
            {{#if isConsumer}}
            <table class="table">
                <thead>
                    <th scope="col">No</th>
                    <th scope="col">Driver</th>
                    <th scope="col">Vehicle</th>
                    <th scope="col">Start point</th>
                    <th scope="col">End point</th>
                    <th scope="col">Pickup time</th>
                    <th scope="col">Dropoff time</th>
                    <th scope="col">Status</th>
                    <th scope="col">Cost</th>
                </thead>
                <tbody>
                    {{#each listRide}}
                    <tr>
                        <th scope="row">{{@index}}</th>
                        <td>{{driver}}</td>
                        <td>{{vehicle}}</td>
                        <td>{{start}}</td>
                        <td>{{dest}}</td>
                        <td>{{pickTime}}</td>
                        <td>{{dropTime}}</td>
                        <td>{{status}}</td>
                        <td>{{cost}}</td>
                    </tr>
                        
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <table class="table">
                <thead>
                    <th scope="col">No</th>
                    <th scope="col">Customer</th>
                    <th scope="col">Vehicle</th>
                    <th scope="col">Start point</th>
                    <th scope="col">End point</th>
                    <th scope="col">Pickup time</th>
                    <th scope="col">Dropoff time</th>
                    <th scope="col">Status</th>
                    <th scope="col">Cost</th>
                </thead>
                <tbody>
                    {{#each listRide}}
                    <tr>
                        <th scope="row">{{@index}}</th>
                        <td>{{customer}}</td>
                        <td>{{vehicle}}</td>
                        <td>{{start}}</td>
                        <td>{{dest}}</td>
                        <td>{{pickTime}}</td>
                        <td>{{dropTime}}</td>
                        <td>{{status}}</td>
                        <td>{{cost}}</td>
                    </tr>
                        
                    {{/each}}
                </tbody>

                </tbody>
            </table>
            {{/if}}
            
                
            </div>
        </div>

    </div>