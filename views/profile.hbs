<div class="container mt-5">
        <div class="card mx-auto" style="width: 100%;">
            <div class="card-header text-center">Account</div>
            <div class="card-body">
                <nav class="nav">
                    <a class="nav-link" href="/user/profile">Change profile</a>
                    <a class="nav-link" href="/user/password">Change password</a>
                    <a class="nav-link" href="#">Preferences</a>
                    <a class="nav-link" href="#">Notifications</a>
                </nav>
                <hr>
                {{#if message}}
                <div class="row">
                        <div class="col-md-12 alert {{kind}} text-center">
                            {{message}}
                        </div>
                </div>
                {{/if}}
                <form method="POST" action="/user/profile" enctype="multipart/form-data">
                    <div class="row mt-5">
                    <div class="col-4 mb-3 text-center">
                        {{#unless user.avatar}}
                        <img src="/images/avatar.png" width="30%" height="width"><br>
                        {{else}}
                        <img src="/uploads/{{user.avatar}}" width="30%" height="width"><br>
                        {{/unless}}
                        <input type="file" class="mt-3" name="imageAvatar" accept="image/*">
                    </div>
                    <div class="col-8 mb-3">
                        <div class="form-group row mb-3">
                            <div class="col-4">
                                <label for="name">Name:</label>
                            </div>
                            <div class="col-8">
                                <input type="text" class="form-control" name="name" id="name" value="{{user.name}}">
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <div class="col-4">
                                <label for="dob">Date of birth:</label>
                            </div>
                            <div class="col-8">
                                <input type="date" class="form-control" name="dob" id="dob" value="{{user.dob}}">
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <div class="col-4">
                                <label for="email">Email:</label>
                            </div>
                            <div class="col-8">
                                <input type="email" class="form-control" name="email" id="email" value="{{user.email}}">
                            </div>
                            
                        </div>
                        <div class="row mb-3">
                            <div class="col-4">
                                <label for="phone">Phone:</label>
                            </div>
                            <div class="col-8">
                                <input type="number" class="form-control" name="phone" id="phone" value="{{user.phone}}">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-4">
                                <label for="address">Address:</label>
                            </div>
                            <div class="col-8">
                                <input type="text" class="form-control" name="address" id="address" value="{{user.address}}">
                            </div>
                            
                        </div>
                        <div class="row mb-3">
                            <div class="col-4">
                                <label for="type">Role:</label>
                            </div>
                            <div class="col-8">
                                <input type="text" class="form-control" name="type" id="type" value="{{user.type}}" readonly>
                            </div>
                        </div>
                                        
                    </div>
                    
                </div>
                    <div class="text-center">
                        <button type="button" class="btn btn-primary px-5 mt-3" onclick="location.href='/'"
                            type="button">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-primary px-5 mt-3">
                            Save changes
                        </button>
                    </div>
                </form>
                
                <hr>

                
                
            </div>
        </div>

    </div>